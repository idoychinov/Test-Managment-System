@using TestManagmentSystem.Web.Areas.Tests.ViewModels;
@using TestManagmentSystem.Web.ViewModels;

@model IList<TestScenarioViewModel>

<div class="row text-capitalize table-heading">
    <div class="col-md-2">Name</div>
    <div class="col-md-2">Total Environments</div>
    <div class="col-md-2">Total Issues</div>
    <div class="col-md-2">System</div>
    <div class="col-md-2">Project</div>
</div>

@for (int i = 0; i < Model.Count; i++)
{
    @Html.DisplayFor(m => m[i])
}
@Html.Partial("_PagingPartial", new PagingViewModel { CurrentPage = (int)TempData["CurrentPage"], NumberOfPages = (int)TempData["NumberOfPages"], ActionLink = TempData["ActionLink"].ToString()})
