@using TestManagmentSystem.Web.ViewModels;
@model PagingViewModel
<div class="row text-center">
    <ul class="pagination">
        @if(@Model.CurrentPage > 1)
        {
        <li><a href=@(Model.ActionLink + "/" + (Model.CurrentPage-1))><span aria-hidden="true">&laquo;</span><span class="sr-only">Previous</span></a></li>
        }
        @for (var i = 1; i <= Model.NumberOfPages; i++)
        {
            var state = "";
            if (i == Model.CurrentPage)
            {
                state = "active";
            }
            <li class=@state>

                <a href=@(Model.ActionLink + "/" + i)>@i</a>
            </li>
        }
        @if(@Model.CurrentPage < @Model.NumberOfPages)
        {
        <li><a href=@(Model.ActionLink + "/" + (Model.CurrentPage+1))><span aria-hidden="true">&raquo;</span><span class="sr-only">Next</span></a></li>
        }
    </ul>
</div>